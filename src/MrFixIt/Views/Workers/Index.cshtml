@{
}


@if (User.Identity.IsAuthenticated)
{

    <div class="text-left">
        <h4>Hello Worker @Model.FirstName @Model.LastName. You are Logged In</h4>
        <h3>Your Current Jobs:</h3>
        @foreach (var Job in Model.Jobs)
        {
            <h5>@Job.Title</h5>

            @if (@Job.Completed)
            {
                <div>Status: Complete!</div>
            }
            else
            {
                <div class="@Job.JobId">Status: Uncomplete! Change status</div>
            }

            <div id="@Job.JobId"></div>
            <hr />
            <script type="text/javascript">
                $('.@Job.JobId').click(function () {
                    console.log("Hi");
                    $.ajax({
                        type: 'GET',
                        dataType: 'html',
                        url: '@Url.Action("MarkComplete")',
                        data: {id : @Job.JobId},
                        success: function (result) {
                            $('#@Job.JobId').html(result);
                        }
                    });
                });
            </script>

        }
        @if (Model.Avaliable)
        {
            <h2>Please @Html.ActionLink("select a job", "Index", "Jobs").</h2>
        }
        else
        {
            <p>You are already assigned to a job.</p>
        }
    </div>
}