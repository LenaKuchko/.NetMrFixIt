@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MrFixIt.Models.Job

<div class="col-md-4">
    <div class="card claim">
        <h2>You are about to mark this job as your current job</h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.JobId)

            <h4>@Model.Title</h4>
            <input class="button waves-effect waves-light btn" type="submit" value="Mark as current job" />
        }
        <p>@Html.ActionLink("Back to list", "Index")</p>
    </div>
  
</div>