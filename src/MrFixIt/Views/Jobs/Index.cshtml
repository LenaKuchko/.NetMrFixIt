@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h3>Our Current Jobs</h3>
    @Html.ActionLink("Add a new job", "Create")
</div>
@foreach (var Job in Model)
{
    <ul>
        <li>@Job.Title</li>
        <ul>
            <li>@Job.Description</li>
        </ul>
        @if (Job.Worker == null)
        {
        <li class="get-claim">This job is unclaimed.</li>
        }
        else
        {
            <li class="btn">This Job is claimed by @Job.Worker.FirstName @Job.Worker.LastName</li>
        }
    </ul>
    <div id="claim"></div>

    <hr />

    <script type="text/javascript">
        $('.get-claim').click(function () {
            console.log("Hi");
            $.ajax({
                type: 'GET',
                dataType: 'html',
                url: '@Url.Action("Claim")',
                data: {id : @Job.JobId},
                success: function (result) {
                    $('#claim').html(result);
                }
            });
        });
    </script>
}

