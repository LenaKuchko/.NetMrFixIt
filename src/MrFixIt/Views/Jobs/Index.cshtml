@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h3>Our Current Jobs</h3>
    @Html.ActionLink("Add a new job", "Create")
</div>
@foreach (var Job in Model)
{
    <div class="card">
        <div class="card-image">
            <img src="images/sample-1.jpg">
            <span class="card-title">Card Title</span>
        </div>
    </div>
    <ul>
        <li>@Job.Title</li>
        <ul>
            <li>@Job.Description</li>
        </ul>
        @if (Job.Worker == null)
        {
            <li class="@Job.JobId">
                This job is unclaimed.
                <div id="@Job.JobId"></div>
            </li>
        }
        else
        {
            <li>This Job is claimed by @Job.Worker.FirstName @Job.Worker.LastName</li>
        }
    </ul>

    <hr />

    <script type="text/javascript">
        $('.@Job.JobId').click(function () {
            console.log("Hi");
            $.ajax({
                type: 'GET',
                dataType: 'html',
                url: '@Url.Action("Claim")',
                data: {id : @Job.JobId},
                success: function (result) {
                    $('#@Job.JobId').html(result);
                }
            });
        });
    </script>
}

<div class="row">
    <div class="col s12 m7">
        <div class="card">
            <div class="card-image">
                <img src="images/sample-1.jpg">
                <span class="card-title">Card Title</span>
            </div>
            <div class="card-content">
                <p>
                    I am a very simple card. I am good at containing small bits of information.
                    I am convenient because I require little markup to use effectively.
                </p>
            </div>
            <div class="card-action">
                <a href="#">This is a link</a>
            </div>
        </div>
    </div>
</div>

